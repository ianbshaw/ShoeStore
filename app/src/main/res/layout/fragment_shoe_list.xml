<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="shoeListViewModel"
            type="com.udacity.shoestore.screens.shoelist.ShoeListViewModel" />
    </data>

    <ScrollView
        android:id="@+id/shoe_list_Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.shoelist.ShoeListFragment">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:translationY="100dp">

            <Button
                android:id="@+id/create_shoe_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_shoe_text" />
        </LinearLayout>
    </ScrollView>
</layout>